      <div class="pet-pic">
          <p>
            <img src="http://placehold.it/200X250" alt="Adopt <%= @pet.name %> at <%= @pet.organization_name %>">
          </p>
          <div class="details">
            <table class="table-striped">
              <caption><%= @pet.primary_breed + " - " + @pet.secondary_breed %></caption>
              <tbody>
                <tr>
                  <td>Location</td>
                  <td><%= @pet.contact_city + ", " + @pet.contact_state %></td>
                </tr>
                <tr>
                  <td>Gender</td>
                  <td>
                    <% if @pet.gender == "F" %>
                    Female
                    <% else %>
                    Male
                    <% end %>
                  </td>
                </tr>
                <tr>
                  <td>Age</td>
                  <td><%= @pet.age %></td>
                </tr>
                <tr>
                  <td>Color</td>
                  <td><%= @pet.color %></td>
                </tr>
                <tr>
                  <td>Size</td>
                  <td><% if @pet.size == "S" %>
                    Small
                  <% end %>
                </td>
                </tr>
                <tr>
                  <td>Housebroken</td>
                  <td>
                    <% if @pet.is_housebroken %>
                    <%= image_tag("green-paw.png", :border => 0) %>
                    <% else %>
                    <%= image_tag("red-paw.png", :border => 0) %>
                    <% end %>
                  </td>
                </tr>
                <tr>
                  <td>Housetrained</td>
                  <td>
                    <% if @pet.is_housetrained %>
                    <%= image_tag("green-paw.png", :border => 0) %>
                    <% else %>
                    <%= image_tag("red-paw.png", :border => 0) %>
                    <% end %>
                  </td>
                </tr>
                <tr>
                  <td>Hypoallergenic</td>
                  <td>
                    <% if @pet.is_hypoallergenic %>
                    <%= image_tag("green-paw.png", :border => 0) %>
                    <% else %>
                    <%= image_tag("red-paw.png", :border => 0) %>
                    <% end %>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>  
      </div>
      <div class="pet-info">
          <h1><%= @pet.name %></h1>
          <div class="pet-bio-info">
            <div class="pet-bio-inside">
              <div class="pet-location">
                <p><strong>Location</strong><br>
                <%= @pet.contact_city + ", " + @pet.contact_state %></p>
              </div>
              <div class="pet-contact">
                <p><strong>Contact</strong><br>
                <%= @pet.contact_phone %><br>
                <%= mail_to @pet.contact_email %>
                </p>
              </div>
            </div>
            <div class="pet-organization-info">
              <p><strong>Organization Contact</strong><br>
              <%= @pet.organization_name %><br>
              <%= @pet.contact_street_address %><br>
              <%= @pet.contact_city + ", " + @pet.contact_state + " " + @pet.contact_zipcode %>
              </p>
            </div>
            <div class="clearfix"></div>
          </div>
          <div class="clearfix"></div>
          <div class="pet-story">
            <h3>
              <% if @pet.name.split('').last == "s" %>
              <%= @pet.name + "'" %>
              <% else %>
              <%= @pet.name + "'s" %>
              <% end %>
              Story
            </h3>
            <p><%= @pet.description %></p>  
          </div>
          
          <div><p>&nbsp;</p></div>
      </div>
    </div>
  </div>
  <div><p>&nbsp;</p></div>
</div>
